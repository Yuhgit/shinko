---
import Header from '../components/Header.astro';
import HeaderSp from '../components/HeaderSp.astro';
import MobileMenu from '../components/MobileMenu.astro';
import Footer from '../components/Footer.astro';
import '../styles/globals.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = '進晃は、水は止める、変化は止めない。見えない水まで確かに止める止水・防水工事の専門会社です。' } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50">
		<!-- Desktop Header -->
		<Header class="hidden lg:flex" />

		<!-- Mobile Header（ハンバーガーボタン） -->
		<HeaderSp class="lg:hidden" />

		<!-- Mobile Menu（スライドオーバーメニュー） -->
		<MobileMenu />

		<slot />

		<!-- Footer -->
		<Footer />
	</body>
</html>

