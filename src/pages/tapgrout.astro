<script>
	// 横スクロールしたらヒントを非表示（scroll + touchmoveでモバイルにも対応）
	function hideHintIfScrolled(scrollEl: Element, hint: Element) {
		if (scrollEl.scrollLeft > 10) hint.classList.add('is-scrolled');
	}
	function initScrollHints() {
		document.querySelectorAll('.js-scroll-table').forEach((el) => {
			// ヒントは常に次の兄弟要素（closestだと他の.relativeに当たる可能性あり）
			const hint = el.nextElementSibling;
			if (!hint || !hint.classList.contains('scroll-hint')) return;
			el.addEventListener('scroll', () => hideHintIfScrolled(el, hint), { passive: true });
			// モバイル: touchmove/touchendでも検知（scrollが発火しない環境対策）
			el.addEventListener('touchmove', () => hideHintIfScrolled(el, hint), { passive: true });
			el.addEventListener('touchend', () => hideHintIfScrolled(el, hint), { passive: true });
		});
	}
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initScrollHints);
	} else {
		initScrollHints();
	}
</script>
