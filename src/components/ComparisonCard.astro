---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  imageSrc: string;
  imageAlt: string;
  description: string;
}

const { title, imageSrc, imageAlt, description } = Astro.props;
---

<div class="bg-white flex flex-[1_0_0] flex-col gap-[24px] items-center min-h-px min-w-px px-[40px] lg:px-[60px] py-[32px] lg:py-[48px] relative rounded-[8px] shadow-[0px_8px_32px_0px_rgba(0,0,0,0.04)] w-full">
	<p class="font-noto-sans font-bold leading-[1.5] min-w-full relative shrink-0 text-[#1a1a1a] text-[20px] lg:text-[24px] text-center w-[min-content]">
		{title}
	</p>
	<div class="h-[190px] lg:h-[250px] relative rounded-[12px] shrink-0 w-full max-w-[328px]">
		<Image
			src={imageSrc}
			alt={imageAlt}
			class="absolute inset-0 object-cover pointer-events-none rounded-[12px] size-full"
			width={328}
			height={250}
		/>
	</div>
	<div class="flex flex-col items-center relative shrink-0 w-full">
		<div class="flex items-center relative shrink-0 w-full">
			<p class="flex-[1_0_0] font-noto-sans font-normal leading-[1.5] min-h-px min-w-px relative text-[14px] lg:text-[16px] text-[#1b1b1b] tracking-[1.6px]">
				{description}
			</p>
		</div>
	</div>
</div>

