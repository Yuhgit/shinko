---
// Header component
interface Props {
  class?: string;
}
const { class: className = '' } = Astro.props;
---

<header class={`fixed top-10 left-0 w-full flex justify-center px-0 py-6 z-50 ${className}`}>
  <div class="bg-white flex gap-20 items-center px-10 py-4 rounded-full shadow-[2px_2px_2px_0px_rgba(0,0,0,0.16)]">
    <a href="/" class="h-11 relative w-46 block">
      <img 
        alt="株式会社 進晃" 
        class="absolute inset-0 object-contain pointer-events-none size-full" 
        src="/images/site-logo.png" 
      />
    </a>
    <nav class="flex gap-5 items-center">
      <a href="#about" class="font-medium nav-link">会社概要</a>
      <a href="#business" class="font-medium nav-link">事業内容</a>
      <a href="#tech" class="font-medium nav-link">技術紹介</a>
      <a href="#projects" class="font-medium nav-link">施工事例</a>
      <div class="flex gap-2.5 items-center">
        <a href="#recruit" class="border border-main-orange flex items-center justify-center px-6 py-1.5 rounded-full shadow-[0px_2px_4px_0px_rgba(0,0,0,0.25)] nav-button">
          <span class="font-medium text-main-orange">採用情報</span>
        </a>
        <a href="#contact" class="bg-main-orange flex items-center justify-center px-6 py-1.5 rounded-full shadow-[0px_2px_4px_0px_rgba(0,0,0,0.25)] nav-button-primary">
          <span class="font-medium text-white">お問い合わせ</span>
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  .w-46 {
    width: 184px;
  }

  .nav-link {
    position: relative;
    transition: color 0.3s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-main-orange);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-main-orange);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-button {
    transition: all 0.3s ease;
  }

  .nav-button:hover {
    box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.3);
    background-color: var(--color-main-orange);
    border-color: var(--color-main-orange);
  }

  .nav-button:hover span {
    color: #fff;
  }

  .nav-button-primary {
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .nav-button-primary:hover {
    box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.3);
    background-color: #fff;
    border-color: var(--color-main-orange);
  }

  .nav-button-primary:hover span {
    color: var(--color-main-orange);
  }
</style>

