---
import { Image } from 'astro:assets';
import { navLinks, navButtons } from '../config/navigation';

// Header component
interface Props {
  class?: string;
}
const { class: className = '' } = Astro.props;
---

<header class={`desktop-header ${className}`}>
  <div class="desktop-header-container">
    <a href="/" class="desktop-header-logo">
      <Image 
        src="/images/site-logo.png"
        alt="株式会社 進晃" 
        class="absolute inset-0 object-contain pointer-events-none size-full" 
        width={184}
        height={44}
      />
    </a>
    <nav class="desktop-header-nav">
      {navLinks.map((link) => (
        <a href={link.href} class="font-medium nav-link">
          {link.label}
        </a>
      ))}
      <div class="desktop-header-buttons">
        {navButtons.map((button) => (
          <a 
            href={button.href} 
            class={`flex items-center justify-center px-6 py-1.5 rounded-full shadow-[0px_2px_4px_0px_rgba(0,0,0,0.25)] ${
              button.variant === 'primary' ? 'nav-button-primary' : 'nav-button'
            }`}
          >
            <span class={`font-medium ${
              button.variant === 'primary' ? 'text-white' : 'text-main-orange'
            }`}>
              {button.label}
            </span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  .desktop-header {
    position: fixed;
    top: 2.5rem;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 1.5rem 0;
    z-index: 50;
    @media (max-width: 1023px) {
        display: none;
    }
  }

  .desktop-header-container {
    background-color: white;
    display: flex;
    gap: 5rem;
    align-items: center;
    padding: 1rem 2.5rem;
    border-radius: 9999px;
    box-shadow: 2px 2px 2px 0px rgba(0, 0, 0, 0.16);
  }

  .desktop-header-logo {
    height: 2.75rem;
    position: relative;
    width: 184px;
    display: block;
  }

  .desktop-header-nav {
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  .desktop-header-buttons {
    display: flex;
    gap: 0.625rem;
    align-items: center;
  }

  .nav-link {
    position: relative;
    transition: color 0.3s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-main-orange);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-main-orange);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-button {
    border: 1px solid var(--color-main-orange);
    transition: all 0.3s ease;
  }

  .nav-button:hover {
    box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.3);
    background-color: var(--color-main-orange);
    border-color: var(--color-main-orange);
  }

  .nav-button:hover span {
    color: #fff;
  }

  .nav-button-primary {
    background-color: var(--color-main-orange);
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .nav-button-primary:hover {
    box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.3);
    background-color: #fff;
    border-color: var(--color-main-orange);
  }

  .nav-button-primary:hover span {
    color: var(--color-main-orange);
  }
</style>

