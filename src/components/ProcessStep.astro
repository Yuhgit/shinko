---
interface Props {
  number: number;
  title: string;
  description: string;
  showArrow?: boolean;
}

const { number, title, description, showArrow = true } = Astro.props;
---

<div class="flex flex-col gap-[12px] lg:gap-[16px] items-center relative w-full">
  <div class="bg-white flex flex-col items-center px-[16px] py-[16px] lg:px-[32px] lg:py-[24px] relative rounded-[12px] lg:rounded-[8px] shadow-[0px_4px_16px_0px_rgba(0,0,0,0.1)] shrink-0 w-full lg:w-[450px] h-[80px] lg:h-auto">
    <div class="flex gap-[16px] items-center relative shrink-0 w-full">
      <div class="bg-main-orange flex flex-col items-center justify-center relative rounded-[20px] lg:rounded-[25px] shrink-0 size-[40px] lg:size-[50px]">
        <p class="font-noto-sans font-bold leading-[19.2px] lg:leading-[1.5] relative shrink-0 text-[16px] lg:text-[24px] text-white">
          {number}
        </p>
      </div>
      <div class="flex flex-[1_0_0] flex-col gap-[4px] lg:gap-[8px] items-start leading-[1.5] min-h-px min-w-px relative">
        <p class="font-noto-sans font-bold relative shrink-0 text-[#1b1b1b] text-[16px] lg:text-[24px] w-full">
          {title}
        </p>
        <p class="font-noto-sans font-normal relative shrink-0 text-[#6b7280] text-[14px] lg:text-[16px] lg:tracking-[1.6px] w-full">
          {description}
        </p>
      </div>
    </div>
  </div>
  {showArrow && (
    <div class="bg-white h-[24px] lg:h-[40px] rounded-[1px] lg:rounded-[2px] shrink-0 w-[2px] lg:w-[3px]"></div>
  )}
</div>

